<%# app/views/dashboard/appearance.html.erb %>
<div class="container">
  <h1 style="text-align:center;">Edit your page's appearance!</h1>
  <%# This takes us to the registrations_controller which does the update_resource %>
  <%= simple_form_for(current_user,
    url: registration_path(current_user),
    html: {method: :put},
    data: {turbo: false}) do |f|  %>
    <div class="row">
      <div class="col-6 link-list">
        <div class="row mt-5">
          <div class="col-4">
            <%= image_tag(current_user.avatar, class:"avatar-image") if current_user.avatar.attached? %>
          </div>
          <div class="col-4">
            <%= f.input :avatar, required: false, label: false  %>
          </div>
          <div class="col-4">
            <%= f.submit "Update Avatar"  %>
          </div>
        </div>
      </div>
      <div class="col-6 link-preview">
      </div>
    </div>
  <% end %>
</div>
