<%# app/views/dashboard/index.html.erb %>

  <div class="container background-container">
    <div class="container">
      <div class="row">
            <h1>Welcome to your Linktree Dashboard & Manager 🐝</h1>
            <p>You can edit your Linktree here!</p>
            
        <div class="col-3">
          <div class="col-6">
            <% current_user.links.each do |link| %>
              <%= simple_form_for(link, url: links_url(link)) do |f| %>
              <%= f.input :title, placeholder: "Title", label: false, class:"form-control" %>
              <%= f.input :url, placeholder: "URL", label: false, class:"form-control" %>
              <%= f.submit "Update Link", class:"btn btn-primary me-auto" %>
              <% end  %>
            <% end  %>
          </div>
        </div>

        <div class="col-3">
          <div class="col-6">
          </div>
        </div>
      </div>
      <%= button_to 'Log Out', destroy_user_session_path, method: :delete %>
      <%# <%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: "delete"}, class:"dropdown-item" %>
    </div>
  </div>
